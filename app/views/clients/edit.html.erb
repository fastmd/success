<center>
  
  <div class="row">
  <div class="small-11 small-centered columns">

  	<div class="panel">
  	<p>Редактировать профиль клиента</p>
  	<% @my_arr = [1,2,3,4,5]%>
  	<%= form_for @client do |f| %>
  	<%= f.label :"Фамилия"%>
  	<%= f.text_field :sname%>
  	<%= f.label :"Имя"%>
  	<%= f.text_field :name%>
  	<%= f.label :"Отчество"%>
  	<%= f.text_field :fname%>
  	<%= f.label 'Серия и номер паспорта' %>
    <%= f.text_field :pseria %>
    <%= f.label 'Дата выдачи' %>
    <%= f.text_field :dn,:value => DateTime.now.strftime('%d.%m.%Y'),:id => "dt2"%>
    <%= f.label 'Персональный номер' %>
    <%= f.text_field :idno%>
    <%= f.label 'Год рождения'%>
    <%= f.text_field :bdate,:value => DateTime.now.strftime('%d.%m.%Y'),:id => "dt3" %>
    <%= f.label 'Страна проживания' %>
    <%= f.country_select(:country, 
    priority_countries: ["RU", "MD", "IT","RO","GB","DE","FR","es","nl"],selected: "MD")%>
    <%= f.label 'Адрес проживания' %>
   	<%= f.text_field :address %>
   	<%= f.label 'E-mail' %>
   	<%= f.text_field :pemail %>
   	<%= f.label 'Контактный телефон' %>
   	<%= f.text_field :tel %>
  	</div>
  	<%= f.submit "Сохранить клиента" %>
  	<% end %>
  	
  	</div>
  </div>
	
</center>
