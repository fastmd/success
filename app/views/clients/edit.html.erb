<% provide(:title, 'Клиент') %>

   <div class="row">
  	<div id="pan1" class="panel panel-info">
  	  <div class="panel-heading"><strong><% if controller.action_name == 'edit' then %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Редактирование 
  	  	                                 <% else %><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Просмотр<% end %> клиента:</strong></div> 		
	  <div class="panel-body">
	  	  <%= simple_form_for @client do |f| %>
	  	  	
          <div class="row">	  	
		  <div class="col-md-6">
		  <div class="panel  panel-default">		  	
		  	<div class="panel-body">
					<%= f.input :sname, label: "Фамилия", as: :string, :input_html => { :size => 25} %>
					<%= f.input :name, label: "Имя", as: :string, :input_html => { :size => 25} %>
					<%= f.input :fname, label: "Отчество", as: :string, :input_html => { :size => 25} %>
					<%= f.input :pseria, label: "Серия и номер паспорта", as: :string, :input_html => { :size => 25} %>
                    <label for='bdate' class="control-label">Дата рождения</label><%= date_field_tag 'bdate', if @client.bdate.nil? then nil else @client.bdate.to_date end, class: "form-control" %>
                    <label for='dn' class="control-label">Дата выдачи паспорта</label><%= date_field_tag 'dn',if @client.dn.nil? then nil else @client.dn.to_date end, class: "form-control" %>
			</div>
		    </div>
		    </div>
    
		    <div class="col-md-6">
		    <div class="panel  panel-default">
		    <div class="panel-body">
					<%= f.input :idno, label: "IDNP", as: :string, :input_html => { :size => 25} %>
					<%= f.input :de, label: "Страна", as: :country, priority: ["MD","RU","UA","RO","IT","GB","DE","FR","ES","NL" ], include_blank: true %>
					<%= f.input :address, label: "Адрес", as: :string, :input_html => { :size => 50} %>
					<%= f.input :pemail, label: "E-mail", as: :email, :input_html => { :size => 25} %>
					<%= f.input :tel, label: "Контактный телефон", as: :tel, :input_html => { :size => 25} %>
					<%= f.input :comments, label: "Примечание", as: :text, :input_html => { :size => 50} %>		   	
			</div>
		  	</div>
		  	</div>
		  	
		  	</div>	<!--row-->
	  		<div  align="center"><%= f.button :submit, "Сохранить", class: "btn btn-primary" %>  <%= f.button :submit, "Отмена", class: "btn btn-warning", name: "cancel" %></div>	
	  				  	
  			<% end %>
  	  </div> <!--panel body-->	
    </div> <!--panel-->		
 </div><!--row-->   
 
   	
