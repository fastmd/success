<h2>Log in</h2>

<div class="jumbotron">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, label: "Пользователь", required: true, autofocus: true, as: :string %>
    <%= f.input :password, label: "Пароль", required: true, as: :password %>
    <%= f.input :remember_me, inline_label: 'Запомнить меня', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions"  align="center">
    <%= f.button :submit, "Вход", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
<br />

<%= render "users/shared/links" %>
</div>
