  <script>
    $(function() {
        $( "#dt" ).datepicker({
      changeMonth: true,
      changeYear: true,
       dateFormat: 'dd-mm-yy' }).val();
      
    $( "#format" ).change(function() {
      $( "#dt" ).datepicker( "option", "dateFormat", $( this ).val() );
    });
    });
  
