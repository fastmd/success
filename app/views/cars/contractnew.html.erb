<%= button_to "Назад", root_path,:method => :get, :class=>"button tiny"%>
<div class="row">
  <div class="large-6 columns">
  	<div class="panel">
  	<p>Новый контракт</p>
  	<% @my_arr = [1,2,3,4,5]%>
  	
