<center>

<div class="row">
  <div class="small-2 large-4 columns">
  	<div class="panel"> 
	
	<p>Марка : <%= @car.marca %></p><br>
	<p>Номер : <%= @car.gnum %></p><br>
	<p>Номер кузова : <%= @car.cuznum %></p><br>
	<p>Цвет : <%= @car.color %></p><br>
	<p>Обьем двигателя : <%= @car.vmot %></p><br>
	<p>Цена : <%= @car.tsumm %></p><br>
	
	</div>
  </div>
  <div class="small-4 large-4 columns">
  	<div class="panel"> 
	<% @car.contracts.each do |co| %>
	<p>Номер контракта : <%= co.cnum %>
	Дата заключения : <%= co.order_date.to_s[5..6] %>
	Длительность : <%= co.diff %></p><br>
	<% end %>
	
	</div>
  </div>
  <div class="small-6 large-4 columns">
  	..
  </div>
</div>
	
</center>


