
   <div id="pan2" class="panel panel-info">
  	<div class="panel-heading"><strong>Клиенты:</strong></div>
  	<div class="panel-body">  		
	 <table id="m2" class="table table-bordered table-condensed table-hover">
	  <thead>
	    <tr>
	      <th>№</th>
	      <th>Фамилия</th>
	      <th>Имя</th>
	      <th>Отчество</th>	      
	      <th>Дата рождения</th> 
	    </tr>
	  </thead>
	  <tbody>
	  	<% clients = Client.all %>
	  	<% clients.each do |clitem| %>
		  	<tr>
		  	<td title='Выбрать клиента'><button type="button" class="btn btn-info  btn-xs" onclick="myFunction(<%= clitem.id %>,'<%= clitem.sname%> <%= clitem.name%> <%= clitem.bdate%>')" >
		  		<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                </button>
		  	</td>
		  	<td><%= clitem.sname%></td>
		  	<td><%= clitem.name%></td>
		  	<td><%= clitem.fname%></td>
		  	<td><%= clitem.bdate%></td>
		  	</tr> 	
	  	<% end %>  
	  </tbody>
	</table>
   </div> <!--panel-body--> 
  </div> <!--panel--> 
